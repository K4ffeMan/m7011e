  "devDependencies": {
    "@tsconfig/node22": "^22.0.5",
    "@types/body-parser": "^1.19.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.25",
    "@types/node": "^20.19.25",
    "@types/pg": "^8.15.6",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "eslint": "^9.39.1",
    "eslint-plugin-perfectionist": "^4.15.1",
